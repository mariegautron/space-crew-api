{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "ðŸš€ Space Crew API."
  },
  "basePath": "/",
  "tags": [
    {
      "name": "Astronaut"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/astronauts": {
      "get": {
        "summary": "Get a list of astronauts",
        "tags": ["Astronaut"],

        "description": "This endpoint returns a paginated list of astronauts",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "The page number to retrieve",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "The maximum number of results to return per page",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "default": 9
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of astronauts",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AstronautsPagination"
                }
              }
            }
          },
          "500": {
            "description": "An error occurred while processing the request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Add a new astronaut",
        "tags": ["Astronaut"],
        "description": "Add a new astronaut to the database",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Astronaut object to be added",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/Astronaut"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Astronaut added successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Astronaut"
                }
              }
            }
          },
          "400": {
            "description": "Invalid astronaut object in request body",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Failed to add astronaut",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/astronauts/{astronautId}": {
      "delete": {
        "summary": "Delete an astronaut by ID",
        "tags": ["Astronaut"],
        "parameters": [
          {
            "name": "astronautId",
            "in": "path",
            "required": true,
            "description": "ID of the astronaut to delete",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Astronaut deleted successfully"
          },
          "400": {
            "description": "Invalid astronaut ID provided"
          },
          "404": {
            "description": "Astronaut not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Astronaut": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string",
            "description": "The name of the astronaut",
            "required": true
          },
          "description": {
            "type": "string",
            "description": "The description of the astronaut"
          },
          "pseudo": {
            "type": "string",
            "description": "The pseudonym of the astronaut"
          },
          "imageUrl": {
            "type": "string",
            "description": "The image URL of the astronaut",
            "required": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "missionId": {
            "type": "integer",
            "description": "The ID of the astronaut's mission"
          }
        }
      },
      "AstronautsPagination": {
        "type": "object",
        "properties": {
          "astronauts": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Astronaut"
            }
          },
          "totalCount": {
            "type": "integer"
          },
          "totalPages": {
            "type": "integer"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
